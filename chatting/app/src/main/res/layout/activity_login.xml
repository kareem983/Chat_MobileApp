<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/LoginToolBar"/>

    <ImageView
        android:id="@+id/Loginicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/LoginToolBar"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/login_icon" />

    <TextView
        android:id="@+id/LoginHeadertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Loginicon"
        android:text="User Login"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LoginEmailEditt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_below="@id/LoginHeadertext"
        android:background="@drawable/button2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/LoginEmailEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="20dp"
            android:textColor="#000"
            android:inputType="textEmailAddress"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="@android:color/transparent"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LoginPasswordEditt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_below="@id/LoginEmailEditt"
        android:background="@drawable/button2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/LoginPasswordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="20dp"
            android:textColor="#000"
            android:inputType="textPassword"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="@android:color/transparent"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/ResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LoginPasswordEditt"
        android:text="Forget your password?"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        android:textSize="17dp"
        android:layout_marginLeft="50dp"
        android:textStyle="italic"/>


    <Button
        android:id="@+id/LoginBtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ResetPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Login Now"
        android:background="@drawable/button1"
        android:textColor="#FFF"
        android:padding="15dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/Rt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/RBtn"
        android:text="Not a User?"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textColor="#000"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/RBtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Create account"
        android:background="@drawable/button2"
        android:textColor="#000"
        android:padding="15dp"
        android:textSize="15dp" />

</RelativeLayout>